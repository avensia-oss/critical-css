{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "./*.ts",
    "vitest.config.ts",
    "test/",
    "types/*.d.ts"
  ]
}
